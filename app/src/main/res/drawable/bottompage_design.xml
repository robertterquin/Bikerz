<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Background for Depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D0D0D0"/>  <!-- Light Gray Shadow -->
            <corners android:radius="30dp"/>  <!-- More Rounded Corners -->
        </shape>
    </item>

    <!-- Main Pane with Glossy Effect -->
    <item android:top="6dp" android:left="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FFFFFF"
                android:endColor="#F8F8F8"/> <!-- Slight Gradient for Modern Look -->
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#E0E0E0"/>  <!-- Soft Border -->
            <padding android:top="10dp" android:bottom="10dp" android:left="20dp" android:right="20dp"/>
        </shape>
    </item>

</layer-list>
