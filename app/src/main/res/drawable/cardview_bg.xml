<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft Shadow Effect for Depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D6D6D6"/>  <!-- Softer Light Gray Shadow -->
            <corners android:radius="20dp"/>  <!-- More Rounded Corners for Elegance -->
        </shape>
    </item>

    <!-- Foreground (White Background with Elevation) -->
    <item android:top="6dp" android:left="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Card Content Background -->
            <stroke android:width="2dp" android:color="#F0F0F0"/>  <!-- Subtle Border -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>
